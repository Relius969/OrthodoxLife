<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="88dp"
              android:background="@color/techranch_primary_color"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/techranch_group_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/techranch_ic_tabbar_group_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/techranch_ic_tabbar_group"/>

                <TextView
                    android:id="@+id/techranch_ic_tabbar_group_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="4dp"
                    android:text="GROUP"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/techranch_unread_group_messages_count"
                style="@style/techranch_unread_count_label_style"/>

        </FrameLayout>

        <View
            android:id="@+id/techranch_group_selected_mark"
            style="@style/techranch_church_chat_underline"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/techranch_channel_tab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/techranch_ic_tabbar_channel_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/techranch_ic_tabbar_channel"/>

                <TextView
                    android:id="@+id/techranch_ic_tabbar_channel_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="4dp"
                    android:text="CHANNEL"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/techranch_unread_channel_messages_count"
                style="@style/techranch_unread_count_label_style"/>

        </FrameLayout>

        <View
            android:id="@+id/techranch_channel_selected_mark"
            style="@style/techranch_church_chat_underline"/>
    </FrameLayout>

</LinearLayout>