<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="techranch_add_church_edit_text_style">

        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="techranch_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="techranch_information_cell_text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="clickable_information_cell_text_view_style" parent="techranch_information_cell_text_view_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/pravzhizn_list_item_background</item>
    </style>

    <style name="techranch_unread_count_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:background">@color/techranch_unread_messages_label_bg_color</item>
        <item name="android:text">3</item>
    </style>

    <style name="techranch_church_chat_underline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/techranch_accent_color</item>
    </style>

</resources>